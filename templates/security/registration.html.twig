{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <!-- Add the slick-theme.css if you want default styling -->
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick.css"/>
    <!-- Add the slick-theme.css if you want default styling -->
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.8.1/slick/slick-theme.css"/>
    <style>
        .slick-slide {
            margin: 0 13px;
            width: 150px;
        }

        /* the parent */
        .slick-list {
            margin: 0;
        }

        .slick-track {

        }
    </style>
{% endblock %}
{% block body %}
    <section class="wrapper">
        <div class="container">
            <div class="container-inside">
                {% include 'elements/__header.html.twig' with {'active': false} %}
                <main>
                    <div class="additional-nav">
                        <div class="additional-nav-container">
                            <div class="additional-nav-item">
                                Живые раки
                            </div>
                            <div class="additional-nav-item">
                                Вареные раки
                            </div>
                            <div class="additional-nav-item">
                                Жареные раки
                            </div>
                        </div>
                    </div>
                    <div class="small-red-content">
                        <embed id="shrimps" type="image/svg+xml" src="/assets/img/shrimp.svg"/>
