                            <div class="form-title">
                                <span id="subtitle">Хочешь накопительную систему?</span><br>
                                <span id="title">Пора зарегестрироваться</span>
                            </div>
                        </div>
                        {{ form_start(form) }}
                            <div class="input-reg-container">
                                {{ form_widget(form.name,
                                    {'attr':{'class': 'user-input login-input','placeholder': 'Имя'}
                                }) }}
                                {{ form_widget(form.email,
                                    {'attr':{'class': 'user-input login-input','placeholder': 'E-mail'}
                                }) }}
                                {{ form_widget(form.password.first,
                                    {'attr':{'class': 'user-input login-input'}
                                }) }}
                                {{ form_widget(form.password.second,
                                    {'attr':{'class': 'user-input login-input'}
                                }) }}
                            </div>
                            {{ form_widget(form.save,
                                {'attr':{'class': 'user-input login-input login-button'}
                            }) }}
                            {{ form_end(form) }}
                    </div>
