{% extends 'admin_base.html.twig' %}
{% block body %}
<!-- Page Wrapper -->
<div id="wrapper">
    <!-- Sidebar -->
    {{ include('elements/admin_nav.html.twig', {'active' : 'categories'}) }}
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            <!-- Topbar -->
            {{ include('elements/admin_header.html.twig') }}
            <!-- End of Topbar -->
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-sm-12 col-md-12 col-lg-8">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="form-row">
                            <div class="col-8">
                                <div class="form-group">
                                    {{ form_row(form.price) }}
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group font-sm-label">
                                    {{ form_row(form.unit) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_row(form.category) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.category) }}
                        </div>
{#                        {% if getMimeType(receipt.titlePhoto) == "video/mp4" %}#}
{#                            <video class="js-player" playsinline loop width="50%" height="50%" allow="autoplay">#}
{#                                <source src="{{ receipt.TitlePhotoPath }}" type="video/mp4"/>#}
{#                            </video>#}
{#                        {% else %}#}
                            <img src="/uploads/receipts/{{ receipt.titlePhoto }}" width="50%" height="50%" alt="img">
{#                        {% endif %}#}
                        <div class="form-group">
                            {{ form_row(form.titlePhoto, {'required': false}) }}
                        </div>

                        <hr>
                        <div class="form-group">
                            {{ form_row(form.percent,{'type':'number'}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.additionalPrice,{'type':'number'}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.seoTitle) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.seoDescription) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.extraHot) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.extraAlcohol) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.save) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        {{ include('elements/admin_footer.html.twig') }}
        <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="login.html">Logout</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
