{% extends 'admin_base.html.twig' %}
{% block body %}
    <!-- Page Wrapper -->
<div id="wrapper">
    {{ include('elements/admin_nav.html.twig', {'active' : false}) }}
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            <!-- Topbar -->
            {{ include('elements/admin_header.html.twig') }}
            <!-- End of Topbar -->
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="h3 mb-2 text-gray-800">Заказ #123123</h1>
                <hr class="sidebar-divider">
                <div class="row relative justify-content-center mt-3">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body" style="padding-top: 60px">
                                <div class="row justify-content-center">
                                    <div class="col-8 col-md-8 col-sm-10">
                                        <ul class="list-group">
                                            {{ form_start(form,{'attr':{'class': 'text-primary h5'}}) }}
                                            {% for orderDetail in form.orderDetails %}
                                                <li class="list-group-item"><span class="badge badge-dark">{{ loop.index }}</span>
                                                    {% if orderDetail.receipt is defined %}
                                                        {{ form_row(orderDetail.receipt.name,{'label': 'Рецепт',
                                                            'attr':{'class': 'text-center'}}
                                                        ) }}
                                                        {{ form_row(orderDetail.product.name,
                                                            {'label': 'Продукт',
                                                            'attr':{'class': 'text-center'}}
                                                        ) }}
                                                        {{ form_row(orderDetail.product.supply.quantity,
                                                            {'label': 'В наличии кг/шт/л/грамм: ','attr': {
                                                                'class': 'text-center',
                                                                'style': 'color:red'}
                                                        }) }}
                                                        {{ form_row(orderDetail.receipt.price) }}
                                                        {{ form_row(orderDetail.product.price,{'attr':
                                                            {'class': 'receipt_product'}
                                                        }) }}
                                                    {% else %}
                                                        {{ form_row(orderDetail.product.name,
                                                            {'label': 'Продукт',
                                                            'attr':
                                                                {'class': 'text-center'}
                                                        }) }}
                                                        {{ form_row(orderDetail.product.supply.quantity,
                                                            {'label': 'В наличии кг/шт/л/грамм: ',
                                                                'attr':
                                                                {'class': 'text-center',
                                                                    'style': 'color:red'}
                                                            }) }}
                                                        {{ form_row(orderDetail.product.price) }}
                                                    {% endif %}
                                                        {{ form_row(orderDetail.quantity,{'label': 'Ко-лво в заказе: ','attr': {
                                                            'min' : 1,
                                                            'max' : orderDetail.vars.value.product.supply.quantity,
                                                        },'type': 'number'}) }}
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                                <hr>
                                <div class="row justify-content-center">
                                    <div class="col-4 text-center text-primary h4">
                                        На какую дату: {{ form_widget(form.orderDate) }}
                                    </div>
                                    <div class="col-4 text-center text-primary h4">
                                        На какое время: {{ form_widget(form.orderTime) }}
                                    </div>
                                    <div class="col-4 text-center text-primary h4">
                                        Cумма: {{ form_widget(form.totalPrice) }}
                                    </div>
                                </div>
                                <div class="col-4">
                                     {{ form_widget(form.submit) }}
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        {{ include('elements/admin_footer.html.twig') }}
        <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="login.html">Logout</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC5CSb-iMy9DtAHF2u-LGV_j2dZ0UQFTCE&libraries=places&callback=initMap"
            async defer></script>
    <script>
        let coordinates = '{{ order.coordinates }}';
        console.log(coordinates);
        let map;
        let position = { lat: Number(coordinates.substr(0,coordinates.indexOf(' '))), lng: Number(coordinates.substr(coordinates.indexOf(' ')+1))};

        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: position,
                zoom: 15
            });
            let marker = new google.maps.Marker({position: position, map: map});
        }
    </script>
{% endblock %}

