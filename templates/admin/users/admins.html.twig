{% extends 'admin_base.html.twig' %}
{% block body %}
<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
    {{ include('elements/admin_nav.html.twig', {'active' : 'users'}) }}
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <!-- Topbar -->
            {{ include('elements/admin_header.html.twig') }}
            <!-- End of Topbar -->
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="h3 mb-2 text-gray-800">Админисраторы</h1>
                <p class="mb-4">Добвить нового администратора <button onclick="window.location.href = '{{ path('admin_create') }}'" class="btn btn-primary">Добавить!</button></p>
                <hr class="sidebar-divider">
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Таблица Администраторов</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Имя</th>
                                    <th>Фамилия</th>
                                    <th>Роли</th>
                                    <th>Телефон</th>
                                    <th>Дата создания</th>
                                    <th>Действия</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for admin in admins %}
                                    <tr>
                                    <td>
                                        {{ admin.email }}
                                    </td>
                                    <td>
                                        {{ admin.name }}
                                    </td>
                                    <td>
                                        {{ admin.surname }}
                                    </td>
                                    <td>
                                        {% for role in admin.roles %}
                                            {{ role }}&nbsp;
                                        {% endfor %}
                                    </td>
                                     <td>
                                         {{ admin.phone }}
                                     </td>
                                     <td>
                                         {{ admin.createdAt|date('d/m/y H:i:s') }}
                                     </td>
                                     <td>
                                         <button class="btn btn-danger btn-circle btn-sm" onclick="if(confirm('Вы хотите удалить этого админа ?')) window.location.href='{{ path('deleteUser',{'slug': admin.slug}) }}'">
                                             <i class="fas fa-times"></i>
                                         </button>
                                         <button class="btn btn-primary btn-circle btn-sm">
                                             <i class="fas fa-pen-alt"></i>
                                         </button>
                                     </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        {{ include('elements/admin_footer.html.twig') }}
        <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="login.html">Logout</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
