<header class="mini">
    <div class="header-raki-logo">
        <img src="/assets/img/raki-footer-logo.svg"/>
    </div>
    {#<div class="fast-order fast-order-in-mini-header">
        <embed id="fish-bone" type="image/svg+xml" src="/assets/img/fish-bone (1).svg"/>
        <span>Быстрый заказ</span>
    </div>#}
    <div class="user_basket-mini">
        <div class="basket-container">
            <i class="fas fa-shopping-cart"></i>
            <span class="sum">{% if sum == null %}0 ₴{% else %}{{ sum }} ₴{% endif %}</span>
        </div>
        <i id="user" class="far fa-user" data-user="{% if app.user is not null %}{{ path('user', {'id': app.user.id}) }}{% else %}{{ path('login') }}{% endif %}"></i>
    </div>
</header>
<header id="mobile">
    <img id="mobile-logo" src="/assets/img/header-logo.svg"/>
    <div class="mobile-user_basket">
        <div class="basket-container">
            <i class="fas fa-shopping-cart"></i>
            <span class="sum">{% if sum == null %}0 ₴{% else %}{{ sum }} ₴{% endif %}</span>
        </div>
        <div id="menu">
            <object  type="image/svg+xml" data="/assets/img/menu.svg"></object>
        </div>
    </div>
</header>