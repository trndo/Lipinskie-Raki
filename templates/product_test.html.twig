{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="container-inside">
        <header>
            <div class="button-row">
                <div id="fast-order">
                    <embed id="fish-bone" type="image/svg+xml" src="/assets/img/fish-bone (1).svg"/>
                    <span>Быстрый заказ</span>
                </div>
                <div class="user_basket">
                    {% set sum = app.session.get('totalSum')%}
                    <div id="basket-container">
                        <embed id="basket" type="image/svg+xml" src="/assets/img/online-shopping-cart.svg"/>  <span class="sum">{% if sum == null %}0 ₴{% else %}{{ sum }} ₴{% endif %}</span>
                    </div>
                    <embed id="user" type="image/svg+xml" src="/assets/img/avatar.svg"/>
                </div>
            </div>
            <div class="row">

                <div class="logo-container">
                    <embed id="logo" type="image/svg+xml" src="/assets/img/logo.svg"/>
                    <div id="logo-text">
                        <span id="lipinskie">Lipinskie</span> <span id="raki">Raki</span>
                        <div class="crayfish">
                            Crayfish & Delicacies
                        </div>
                    </div>
                </div>
            </div>
            <div class="row nav-row">
                <nav>
                    <ul>
                        <li class="active-nav">Главаня</li>
                        <li>Живые раки</li>
                        <li>Жареные раки</li>
                        <li>Вареные раки</li>
                        <li>Ассортимент</li>
                    </ul>
                </nav>
            </div>
        </header>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                <div class="product-card">
                    <img src="{{ product.TitlePhotoPath }}" alt="">
                        <h4>{{ product.name }}</h4>
                        <p>{{ product.description }}</p>
                        <span class="price">{{ product.price }}</span>
                        <input class="quantity" type="number" width="20px" name="quantity" min="1" value="1">
                        <div class="in_basket to_basket" data-type="{{ product.getType }}" data-name="{{ product.slug }}">To cart</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


