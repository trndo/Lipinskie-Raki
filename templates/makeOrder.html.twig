{% extends 'base.html.twig' %}
{% block body %}
        <div class="container">
            <header class="mini">
                <div class="header-raki-logo">
                    <embed type="image/svg+xml" src="/assets/img/raki-footer-logo.svg"/>
                </div>
                <div class="user_basket-mini">
                    <div id="basket-container">
                        <embed id="basket" type="image/svg+xml" src="/assets/img/online-shopping-cart.svg"/>  <span>550 грн</span>
                    </div>
                    <embed id="user" type="image/svg+xml" src="/assets/img/avatar-red.svg"/>
                </div>
            </header>
            <div class="red-content">
                <embed id="van" type="image/svg+xml" src="/assets/img/van.svg"/>
                <div class="order-block">
                    <div id="order-title">
                        Оформление заказа
                    </div>
                    <form action="" class="order-form">
                        <input type="text" class="order-input" placeholder="Имя*">
                        <input type="text" class="order-input" placeholder="Фамилия*">
                        <input type="text" class="order-input input-margin-29" placeholder="+38(000)___-__-__*">
                        <input type="text" class="order-input" placeholder="Email*">
                        <div class="form-row input-margin-16">
                            <input type="text" class="date-input" placeholder="Дата*">
                            <input type="text" class="time-input" placeholder="14:00*">
                        </div>
                        <div class="delivery-type">
                            <div id="delivery">
                                Доставка
                            </div>
                            <div id="self-delivery">
                                Самовывоз
                            </div>
                        </div>
                        <input type="text" class="order-input input-margin-16 order-address" placeholder="Address Bla Bla*">
                        <div class="checkout-order">
                            Оформить
                        </div>
                    </form>
                </div>
                <div id="map-block">

                </div>
            </div>
        </div>
        <footer>
            <div class="container">
                <div class="container-inside">
                    <div class="row footer-row">
                        <div class="logos">
                            <div class="footer-raki-logo">
                                <embed type="image/svg+xml" src="/assets/img/raki-footer-logo.svg"/>
                            </div>
                            <div class="footer-octo-logo">
                                <embed type="image/svg+xml" src="/assets/img/octologo.svg"/>
                            </div>
                        </div>
                        <div class="contact">
                            <div class="contact-info">
                                <span id="contact-num">+38(000)000-00-00</span>
                                <span id="contact-email">rakiInf@gmail.com</span>
                            </div>
                            <div class="contact-social">
                                <embed type="image/svg+xml" src="/assets/img/instagram.svg"/>
                                <embed type="image/svg+xml" src="/assets/img/telegram-logo.svg"/>
                                <embed type="image/svg+xml" src="/assets/img/viber-logo.svg"/>
                            </div>
                        </div>
                        <div class="footer-nav">
                            <ul>
                                <li class="active-nav">
                                    Главная
                                </li>
                                <li>
                                    Живые раки
                                </li>
                                <li>
                                    Жареные раки
                                </li>
                                <li>
                                    Вареные раки
                                </li>
                                <li>
                                    Ассортимент
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div id="red-line">
            </div>
        </footer>
{% endblock %}